			<!-- 视图的配置 -->
			<result name="success">/index.jsp</result>
		</action>
		
		<action name="action2" class="gz.itcast.a_action.UserAction2" method="login">
			<result name="success">/index.jsp</result>
		</action>
		
		<action name="action3" class="gz.itcast.a_action.UserAction3" method="login">
			<result name="success">/index.jsp</result>
		</action>
	
	</package>
</struts>