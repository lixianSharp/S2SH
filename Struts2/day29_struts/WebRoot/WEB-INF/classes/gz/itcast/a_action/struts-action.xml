<!-- 该文件默认情况下必须放在项目的src目录下 -->
<struts>
	<package name="a_action" extends="struts-default" namespace="/action" abstract="false">
		<!-- action的配置 -->
		<!-- action的名称。用于访问该Action的路径 -->
